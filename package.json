{
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.7"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabrydawood/Electron-PrayerTimes.git"
  },
  "bugs": {
    "url": "https://github.com/sabrydawood/Electron-PrayerTimes/issues"
  },
  "homepage": "https://github.com/sabrydawood/Electron-PrayerTimes#readme",
  "name": "prayertimes",
  "description": "Prayer Times Is An Desktop Application To Help You And Notify You About Your Prayer Times",
  "productName": "PrayerTimes",
  "author": "sabrydawood",
  "copyright": "Copyright Â© 2024 sabrydawood",
  "appId": "com.sabry.PrayerTimes",
  "version": "1.0.3",
  "appVersion": "1.0.3",
  "macVersion": "1.0.3",
  "winVersion": "1.0.3",
  "linuxVersion": "1.0.3",
  "electronVersion": "33.0.2",
  "build": {
    "appId": "com.sabry.PrayerTimes",
    "productName": "PrayerTimes",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "icon": "./public/Imgs/Icon.ico",
    "removePackageScripts": true,
    "files": [
      "main.js",
      "index.html",
      "Icon.ico",
      "App/*",
      "public/**/*",
      "JsonDb",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "rpm",
        "deb",
        "pacman"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "repo": "Electron-PrayerTimes",
        "owner": "sabrydawood",
        "private": false
      }
    ]
  }
}
